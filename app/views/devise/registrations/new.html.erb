
<div class="row">
  <div class="col-lg-4 col-xs-12 col-md-4 col-lg-offset-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 class="text-center">Sign up</h2>
      <%= f.error_notification %>
        <%= f.input :email, required: true, autofocus: true, label:false, placeholder:"Email", html_input: {class: "form-control"} %>
        <%= f.input :password, required: true,label: false, placeholder:"Password", html_input: {class: "form-control"} %>
        <%= f.input :password_confirmation, required: true,label: false, placeholder:"Password Confirmation", html_input: {class: "form-control"}   %>
        <%= f.button :submit, "Sign up", class: "btn btn-block btn-primary"  %>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>



