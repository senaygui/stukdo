<div class="row">
  <div class="col-lg-4 col-xs-12 col-md-4 col-lg-offset-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="text-center">Log in</h2>
      <%= f.input :email, required: false, autofocus: true,label: false, placeholder:"Email", html_input: {class: "form-control"} %>
      <%= f.input :password, required: false, label: false, placeholder:"Password"  %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Log in", class: "btn btn-block btn-primary" %>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>